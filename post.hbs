{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<main role="main" id="posts-section" class="posts-section">
	<div class="posts-container">
		{{#post}}
		<article>
			<a class="post-title width-container text-dark"><h2>{{title}}</h2></a>
			<div class="post-meta">
				{{#primary_author}}
				<img class="post-authorimg" src="{{img_url profile_image absolute='true'}}" alt="{{name}}">
				<p class="post-meta-authorcat"><a href="{{url absolute='true'}}">{{name}}</a>{{/primary_author}}
				{{#if primary_tag}} on <a href="/tag/{{primary_tag.slug}}">{{primary_tag.name}}</a>{{/if}}</p>
				<p class="post-meta-sep">â€¢</p>
				<p class="post-meta-datetime">{{date published_at format="MMMM DD, YYYY"}}</p>
			</div>
			<div class="post-img shadow-sm lazy" style="background-image: url('{{img_url feature_image absolute='true'}}');"></div>
			<div class="post-content">
				{{content}}

				{{!-- Social media share buttons --}}
				<div class="share-post">
					<hr>
					<p class="share-title">Share this article:</p>
					<div class="share-buttons">
						<button type="button" class="btn btn-primary"><i class="fab fa-twitter"></i></button>
						<button type="button" class="btn btn-primary"><i class="fab fa-facebook-square"></i></button>
						<button type="button" class="btn btn-primary"><i class="fab fa-reddit-alien"></i></button>
					</div>
				</div>

				{{!-- This is the tailored area for comments --}}
				<div class="dcomments">
					
				</div>
			</div>
		</article>
		{{/post}}
	</div>
</main>

{{!-- This tag will output the footer --}}
{{> "footer"}}

{{!-- This tag will output the required JavaScripts for all pages --}}
{{> "inject-js"}}